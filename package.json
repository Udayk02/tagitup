{
  "publisher": "uk02",
  "name": "tagit",
  "displayName": "TagIt",
  "description": "Tag your files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "tags",
    "tagging",
    "organize",
    "file management"
  ],
  "icon": "resources/tagit.png",
  "activationEvents": [],
  "repository": {
    "url": "https://github.com/Udayk02/tagit"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tagit.tagFile",
        "title": "Tagit: Tag the Current File"
      },
      {
        "command": "tagit.clearWorkspaceState",
        "title": "Tagit: Clear All the Tags"
      },
      {
        "command": "tagit.refreshTreeView",
        "title": "Tagit: Refresh",
        "icon": {
          "dark": "resources/refresh-white.png",
          "light": "resources/refresh-black.png"
        }
      },
      {
        "command": "tagit.removeActiveFileTag",
        "title": "Tagit: Remove Active File Tag"
      },
      {
        "command": "tagit.searchByTags",
        "title": "Tagit: Search Files by Tags"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tagit",
          "title": "Tagit",
          "icon": "resources/tagit.png"
        }
      ]
    },
    "views": {
      "tagit": [
        {
          "id": "tagitTreeView",
          "name": "Tagged files",
          "icon": "resources/tagit.png",
          "dataProvider": "tagitProvider"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "tagit.refreshTreeView",
          "when": "view == tagitTreeView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "typescript": "^5.8.2"
  }
}
